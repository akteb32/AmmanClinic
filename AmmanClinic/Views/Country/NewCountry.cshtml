@model CountryDTO
@{
    ViewData["Title"] = "NewCountry";
    Layout = "~/Views/Shared/_Menu.cshtml";
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="country name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <input type="submit" value="Save" class="btn btn-primary" asp-action="Save" />
    </div>
</form>