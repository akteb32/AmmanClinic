@model SignUpDTO
@{
    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_Menu.cshtml";
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="name">
    </div>

    <div class="mb-3">
        <label class="form-label">DOB</label>
        <input type="date" class="form-control" asp-for="DOB">
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="Password">
    </div>

    <div class="mb-3">


        <input type="submit" value="Create Account" class="btn btn-primary" asp-action="SignUp" />

    </div>

</form>